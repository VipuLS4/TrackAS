#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run type checking
echo "📝 Type checking..."
npm run type-check

# Run linting
echo "🧹 Linting..."
npm run lint

# Run build to ensure it works
echo "🏗️  Building..."
npm run build

echo "✅ Pre-commit checks passed!"